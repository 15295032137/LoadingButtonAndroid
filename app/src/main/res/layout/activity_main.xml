<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    tools:context="br.com.simplepass.loadingbutton.MainActivity">

    <br.com.simplepass.loading_button_lib.CircularProgressButton
        android:id="@+id/progress_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_default"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        app:spinning_bar_padding="10dp"
        app:spinning_bar_color="@android:color/white"
        app:spinning_bar_width="4dp"
        android:text="Send"
        android:textColor="@android:color/white"
        android:layout_marginBottom="20dp"/>

    <br.com.simplepass.loading_button_lib.CircularProgressButton
        android:id="@+id/progress_btn_no_padding"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_default"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        app:spinning_bar_color="@android:color/white"
        app:spinning_bar_width="4dp"
        android:text="Send"
        android:textColor="@android:color/white"/>

</LinearLayout>
